@startuml
' ===== Estilo minimalista =====
skinparam dpi 200
skinparam shadowing false
skinparam linetype ortho
skinparam roundcorner 12
skinparam classBackgroundColor #FFFFFF
skinparam classBorderColor #2E3A59
skinparam classFontColor #1E293B
skinparam classFontSize 15
skinparam classAttributeFontColor #475569
skinparam classAttributeFontSize 12
skinparam ArrowColor #475569
skinparam ArrowFontColor #475569
skinparam ArrowFontSize 13
skinparam ArrowThickness 1.2
skinparam titleFontColor #1E293B
skinparam titleFontSize 19

left to right direction

' ===== Clases =====
class Usuario {
  + id
  + nombre
  + emailInstitucional
  + esAdmin
}

class Apunte {
  + titulo
  + descripcion
  + fechaSubida
  + estado
}

class Comentario {
  + texto
  + fecha
}

class Valoracion {
  + puntaje
  + fecha
}

class DecisionModeracion {
  + decision
  + motivo
  + fecha
}

class Administrador
Usuario <|-- Administrador

' ===== Relaciones =====

Usuario "1" --> "0..*" Apunte : crea

Apunte "1" --> "0..*" Comentario : contiene
Comentario "0..*" --> "1" Usuario : escrito por

Apunte "1" --> "0..*" Valoracion : recibe
Valoracion "0..*" --> "1" Usuario : emitida por

Administrador "1" --> "0..*" DecisionModeracion : aplica
DecisionModeracion --> Apunte : modifica

' Forzar layout limpio horizontal (no visibles)
Usuario -[hidden]- Apunte
Apunte -[hidden]- Comentario
Comentario -[hidden]- Valoracion
Apunte -[hidden]- DecisionModeracion
Administrador -[hidden]- DecisionModeracion

@enduml
